{
  "project": "QuickGig",
  "defaultBranch": "main",
  "review": {
    "severity": ["security", "correctness", "types", "perf", "accessibility", "tests", "docs"],
    "ignorePaths": ["**/playwright-report/**", "**/test-results/**", "public/**"]
  },
  "conventions": {
    "branchPrefix": {
      "feat": "feat/",
      "fix": "fix/",
      "chore": "chore/",
      "docs": "docs/"
    },
    "commitStyle": "conventional"
  }
}

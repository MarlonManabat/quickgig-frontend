{
  "name": "quickgig-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "next lint || true",
    "lint:href": "node scripts/href-lint.mjs",
    "fix:href": "node scripts/href-codemod.mjs",
    "qa:seed": "tsx scripts/seed.ts",
    "qa:smoke": "playwright test --project=smoke",
    "qa:full": "playwright test --project=full-e2e",
    "qa:report": "playwright show-report",
    "build:prod": "next build",
    "start:prod": "next start -p 3000",
    "analyze": "ANALYZE=true next build",
    "build:profile": "NODE_OPTIONS='--trace-deopt --trace_gc' next build",
    "seed": "node scripts/seed.mjs",
    "postinstall": "node -e \"process.env.NODE_ENV==='production'?process.exit(0):0\" || npx playwright install --with-deps || true",
    "test:smoke:ci": "playwright test tests/smoke --config=playwright.ci.ts --reporter=github",
    "test:e2e:ci": "playwright test tests/e2e --config=playwright.ci.ts --reporter=github"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-shared": "^0.7.0",
    "@supabase/supabase-js": "^2.45.0",
    "cookie": "^0.6.0",
    "next": "^14 || ^15",
    "nodemailer": "^6.9.8",
    "raw-body": "^2.5.2",
    "react": "^18",
    "react-dom": "^18",
    "resend": "^1.0.0",
    "set-cookie-parser": "^2.6.0",
    "stripe": "^16.0.0",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@playwright/test": "^1.48.0",
    "@supabase/supabase-js": "^2.45.0",
    "@types/cookie": "^0.6.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "fast-glob": "^3.3.2",
    "postcss": "^8",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.4.1",
    "ts-morph": "^24.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17"
  }
}

{
  "name": "quickgig-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "next lint || true",
    "smoke": "echo \"(placeholder)\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint:href": "node scripts/href-lint.mjs",
    "fix:href": "node scripts/href-codemod.mjs",
    "qa:smoke": "playwright test --config=tests/playwright.config.ts -g '@smoke'",
    "qa:all": "playwright test --config=tests/playwright.config.ts",
    "build:prod": "next build",
    "start:prod": "next start -p 3000",
    "qa:ci": "start-server-and-test start:prod http://localhost:3000 \"PLAYWRIGHT_BASE_URL=http://localhost:3000 npm run qa:smoke\"",
    "qa:nav": "start-server-and-test start:prod http://localhost:3000 \"PLAYWRIGHT_BASE_URL=http://localhost:3000 npx playwright test tests/nav.audit.spec.ts --config=tests/playwright.config.ts\"",
    "qa:ui": "playwright test tests/ui/header.spec.ts --config=tests/playwright.config.ts",
    "qa:admin": "playwright test tests/admin.guard.spec.ts",
    "seed": "node scripts/seed.mjs",
    "postinstall": "node -e \"process.env.NODE_ENV==='production'?process.exit(0):0\" || npx playwright install --with-deps || true"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "next": "^14 || ^15",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^16.0.0",
    "raw-body": "^2.5.2",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "@typescript-eslint/parser": "^6.21.0",
    "@playwright/test": "^1.48.0",
    "ts-morph": "^24.0.0",
    "fast-glob": "^3.3.2",
    "start-server-and-test": "^2.0.0",
    "@supabase/supabase-js": "^2.45.0"
  },
  "engines": {
    "node": ">=18.17"
  }
}
